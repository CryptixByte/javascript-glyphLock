{
  "manifest_version": 3,
  "name": "GlyphLock",
  "version": "0.1.0",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "glyph_background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["glyph_scripts.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/GlyphLock16.png"
    }
  }
}